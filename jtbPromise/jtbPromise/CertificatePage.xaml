<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:jtbPromise"
             x:Class="jtbPromise.CertificatePage">
    <ContentPage.Content>
        <StackLayout Spacing="10">
            <Label Text="Step 1"
                FontSize="20"
                HeightRequest="50"
                VerticalOptions="Start"
                HorizontalOptions="CenterAndExpand" />
            <Label Text="1. Record 버튼을 누른채로 본인의 이름을 말하세요.&#10; 2. 손을 때면 녹음이 완료됩니다. &#10; 3. Play 버튼으로 녹음내용을 확인한다."
                FontSize="10"
                HeightRequest="50"
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="BtnRecord" Text="Record"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand" 
                Pressed="BtnRecord_Pressed" 
                Released="BtnRecord_Released"/>
            <Button x:Name="BtnPlay" Text="Play"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand" 
                Clicked="BtnPlay_Clicked" />
            <Button x:Name="BtnOK" Text="OK"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand" 
                Clicked="BtnOK_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>